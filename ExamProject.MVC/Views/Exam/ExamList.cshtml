@model List<ExamDto>
@{
    ViewData["Title"] = "Sınav Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Tarih</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr>
                        <td>@exam.Id</td>
                        <td>@exam.Post.Header</td>
                        <td>@exam.Post.PostedDate.Date</td>
                        <td>
                            @Html.ActionLink("Sınavı Al", "SolveExam", "Exam", new { id = exam.Id }, new { @class = "btn btn-primary" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
